{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/contract/*": ["./src/contract/*"],
      "@/*": ["./src/*"],
      "backend/model": ["../backend/dist/model/schemas"],
      "backend/drizzle": ["../backend/dist/drizzle/schema"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
