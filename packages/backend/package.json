{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./model": {
      "types": "./dist/model/schemas.d.ts",
      "default": "./dist/model/schemas.js"
    },
    "./drizzle": {
      "types": "./dist/drizzle/schema.d.ts",
      "default": "./dist/drizzle/schema.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/migrate.ts"
  },
  "dependencies": {
    "@orpc/server": "^1.10.4",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.4",
    "shared": "*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
}
